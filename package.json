{
  "name": "cpcash-wallet-rpc",
  "private": true,
  "version": "0.2.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:single": "SINGLEFILE=1 vite build && node scripts/build-singlefile.mjs",
    "preview": "vite preview",
    "check:seo": "node scripts/check-seo.mjs",
    "test": "npm run test:unit && npm run test:ui",
    "test:unit": "find tests/unit -name \"*.test.ts*\" | sort | while read -r f; do npx vitest run \"$f\" || exit 1; done",
    "test:ui": "find tests/ui -name \"*.test.ts*\" | sort | while read -r f; do npx vitest run \"$f\" || exit 1; done",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage.enabled=true --coverage.provider=v8 --coverage.reporter=text-summary --coverage.reporter=json-summary",
    "check:coverage": "node scripts/check-coverage-gate.mjs",
    "test:coverage:gate": "npm run test:coverage && npm run check:coverage",
    "test:e2e:install": "PLAYWRIGHT_BROWSERS_PATH=.pw-browsers playwright install chromium",
    "test:e2e": "PLAYWRIGHT_BROWSERS_PATH=.pw-browsers playwright test",
    "test:e2e:real": "E2E_REAL_RPC=1 PLAYWRIGHT_BROWSERS_PATH=.pw-browsers playwright test e2e/wallet-real-rpc.spec.ts",
    "test:e2e:ui": "PLAYWRIGHT_BROWSERS_PATH=.pw-browsers playwright test --ui",
    "test:all": "npm run test && npm run test:e2e"
  },
  "dependencies": {
    "bs58": "5.0.0",
    "ethers": "6.13.4",
    "lucide-react": "^0.468.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-qr-code": "^2.0.15"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.18",
    "autoprefixer": "^10.4.24",
    "jsdom": "^25.0.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.2",
    "vite": "^6.4.1",
    "vitest": "^4.0.18"
  }
}
